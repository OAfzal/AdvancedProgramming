doctype html
html
    head
    |
    |
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
    style(type='text/css').
        *{
            margin: 10px;
        }
        #title{
            font-family: Arial, Helvetica, sans-serif;
        }
        table {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            //- border-collapse: collapse;
            width: 100%;
        }

        table td, table th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        table tr:nth-child(even){background-color: #f2f2f2;}

        table tr:hover {background-color: #ddd;}

        button {
            background-color: #808080;
            color: white;
            padding: 12px 20px;
            margin: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            //- float: right;
        }

        button:hover {
            background-color: #45a049;
        }

        table th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #808080;
            color: white;
        }
    |
    |
    body
        h1(id="title").
            Product List
    
        include logout.pug

        table(id="list" align="center")
            tr
                th.
                    Name
                th.
                    Description
                th.
                    Price
                th.
                    Category
                th.
                    Image
                th.
                    Reviews
            each product in productList
                tr
                    td.
                        #{product.name}
                    td.
                        #{product.description}
                    td.
                        #{product.price}
                    td.
                        #{product.category}
                    td.
                        Something
                    td.
                        #{product.reviews}
                    


